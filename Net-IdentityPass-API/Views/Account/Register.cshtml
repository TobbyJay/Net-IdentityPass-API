@model RegisterViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Sign-Up</title>

    <link rel="stylesheet" href="~/dashboardStyle/vendors/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="~/dashboardStyle/vendors/css/vendor.bundle.base.css">

    <link rel="stylesheet" href="~/dashboardStyle/css/horizontal-layout-light/style.css">
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>

</head>

<body>
    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="main-panel">
                <div class="content-wrapper d-flex align-items-center auth px-0">
                    <div class="row w-100 mx-0">
                        <div class="col-lg-4 mx-auto">
                            <div class="auth-form-light text-left py-5 px-4 px-sm-5">
                                <div class="brand-logo">
                                    @*<img src="https://www.bootstrapdash.com/demo/wagondash/template/images/logo-dark.svg" alt="logo">*@
                                </div>
                                <h2 class="text-dark font-weight-bold">New here?</h2>
                                <h6 class="font-weight-light">Signing up is easy. It only takes a few steps</h6>
                                <div asp-validation-summary="All" class="badge-danger" style="font-size:smaller;"></div>

                                <form class="pt-3" method="post" asp-controller="account" asp-action="register">
                                    <div class="form-group">
                                        <input class="form-control form-control-lg rounded" asp-for="CompanyName" placeholder="Enter Company Name">
                                        <span asp-validation-for="CompanyName" class="text-danger"></span>

                                    </div>
                                    <div class="form-group">
                                        <input type="email" class="form-control form-control-lg rounded" asp-for="Email" placeholder="Enter your email">
                                        <span asp-validation-for="Email" class="text-danger"></span>

                                    </div>
                                   
                                  
                                    <div class="form-group">
                                        <input type="password" class="form-control form-control-lg rounded" asp-for="Password" placeholder="Enter password">
                                        <span asp-validation-for="Password" class="text-danger"></span>

                                    </div>
                                    <div class="form-group">
                                        <input type="password" class="form-control form-control-lg rounded" asp-for="ConfirmPassword" placeholder="Confirm your password">
                                    </div>

                                    <div class="mt-3">
                                        <button type="submit" class="btn btn-block btn-primary btn-lg rounded font-weight-medium auth-form-btn">SIGN UP</button>
                                    </div>
                                    <div class="text-center mt-4 font-weight-light">
                                        Already have an account? <a asp-controller="account" asp-action="login" class="text-primary">Login</a>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- content-wrapper ends -->
        </div>
        <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->

    <script src="~/dashboardStyle/vendors/js/vendor.bundle.base.js"></script>
    <script src="~/dashboardStyle/js/off-canvas.js"></script>
    <script src="~/dashboardStyle/js/hoverable-collapse.js"></script>
    <script src="~/dashboardStyle/js/template.js"></script>
    <script src="~/dashboardStyle/js/settings.js"></script>
    <script src="~/dashboardStyle/js/todolist.js"></script>

    <script src="~/dashboardStyle/js/dashboard.js"></script>
    <script src="~/dashboardStyle/js/todolist.js"></script>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <!-- endinject -->
</body>

</html>