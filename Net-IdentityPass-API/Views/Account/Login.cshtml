@model Entities.LoginViewModel;
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Login-Page</title>

    <link rel="stylesheet" href="~/dashboardStyle/vendors/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="~/dashboardStyle/vendors/css/vendor.bundle.base.css">

    <link rel="stylesheet" href="~/dashboardStyle/css/horizontal-layout-light/style.css">

    @*<link rel="shortcut icon" href="~/dashboardStyle/images/favicon.png" />*@
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>

</head>

<body>
    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="main-panel">
                <div class="content-wrapper d-flex align-items-center auth px-0">
                    <div class="row w-100 mx-0">
                        <div class="col-lg-4 mx-auto">
                            <div class="auth-form-light text-left py-5 px-4 px-sm-5">
                                <div class="brand-logo">
                                    @*<img src="https://www.bootstrapdash.com/demo/wagondash/template/images/logo-dark.svg" alt="logo">*@
                                </div>
                                <h2 class="text-dark font-weight-bold">Hello! let's get started</h2>
                                <h6 class="font-weight-light">Sign in to continue.</h6>

                                <div class="text-danger">
                                    <div asp-validation-summary="All" class="badge-danger text-center"></div>
                                </div>
                                <form class="pt-3" method="post" asp-controller="account" asp-action="login">
                                    <div class="form-group">
                                        <input type="email" asp-for="Email" class="form-control form-control-lg rounded" placeholder="Enter email">
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <input type="password" asp-for="Password" class="form-control form-control-lg rounded" placeholder="Enter password">
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>
                                    <div class="mt-3">
                                        <button type="submit" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn rounded">SIGN IN</button>
                                    </div>
                                    <div class="my-2 d-flex justify-content-between align-items-center">
                                        @*<div class="form-check">
                                                <label class="form-check-label text-muted">
                                                    <input type="checkbox" class="form-check-input">
                                                    Keep me signed in
                                                </label>
                                            </div>*@
@*                                        <a asp-controller="account" asp-action="forgotpass" class="auth-link text-black">Forgot password?</a>
*@                                    </div>

                                    <div class="text-center mt-4 font-weight-light">
                                        Don't have an account? <a asp-controller="account" asp-action="register" class="text-primary">Create Account</a>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- content-wrapper ends -->
        </div>
        <!-- page-body-wrapper ends -->
    </div>

    <script src="~/dashboardStyle/vendors/js/vendor.bundle.base.js"></script>
    <script src="~/dashboardStyle/js/off-canvas.js"></script>
    <script src="~/dashboardStyle/js/hoverable-collapse.js"></script>

    <script src="~/dashboardStyle/js/template.js"></script>
    <script src="~/dashboardStyle/js/settings.js"></script>
    <script src="~/dashboardStyle/js/todolist.js"></script>

    <script src="~/dashboardStyle/js/dashboard.js"></script>
    <script src="~/dashboardStyle/js/todolist.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <!-- endinject -->
</body>

</html>